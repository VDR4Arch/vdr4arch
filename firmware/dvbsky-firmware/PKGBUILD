# This PKGBUILD is part of the VDR4Arch project [https://github.com/vdr4arch]

# Maintainer: Ole Ernst <olebowle[at]gmx[dot]com>
pkgname=dvbsky-firmware
pkgver=20141128
pkgrel=2
pkgdesc="Firmware for DVBSky cards/boxes"
url="https://web.archive.org/web/http://www.dvbsky.net/Support_linux.html"
arch=('any')
license=('custom')
source=("$pkgname-$pkgver.tar.gz::https://web.archive.org/web/http://www.dvbsky.net/download/linux/$pkgname.tar.gz"
        'LICENSE')
md5sums=('b1aa72c5625e3deb9c8c9199d3b8789e'
         '3616759a98aaedb3e1cce50271263327')

#server doesn't like curl's user agent
DLAGENTS=("https::/usr/bin/curl -A 'Mozilla' -fLC - --retry 3 --retry-delay 3 -o %o %u")

package() {
  cd "$srcdir/$pkgname"
  for file in *.fw; do
    install -Dm644 $file "$pkgdir/usr/lib/firmware/$file"
  done
  install -Dm644 "${srcdir}/LICENSE" "${pkgdir}/usr/share/licenses/$pkgname/LICENSE"
}
