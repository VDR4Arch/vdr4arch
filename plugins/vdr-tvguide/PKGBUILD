# Maintainer: Christopher Reimer <vdr4arch[at]creimer[dot]net>
pkgname=vdr-tvguide
_gitrev=5bd0ad2603c5cfe1ac0ab9cadafa1ba6d3aee114
pkgver=1.0.0_22_g5bd0ad2
epoch=1
_vdrapi=2.1.2
pkgrel=2
pkgdesc="highly customizable 2D EPG viewer plugin."
url="http://projects.vdr-developer.org/projects/plg-tvguide"
arch=('x86_64' 'i686')
license=('GPL2')
depends=('imagemagick=6.8.7.10' 'libpng' "vdr-api=$_vdrapi")
makedepends=('git')
install="$pkgname.install"
_plugname=$(echo $pkgname | sed 's/vdr-//g')
source=("git://projects.vdr-developer.org/vdr-plugin-tvguide.git#commit=$_gitrev")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/vdr-plugin-${_plugname}"
    git tag -a 1.0.0 -m 'Added Tag' c545f6b4cfc4c8fe604eb216fb1d8c86550e74ca 2> /dev/null
  git describe --tags | sed 's/-/_/g;s/v//'
}

build() {
  cd "$srcdir/vdr-plugin-${_plugname}"
  make IMAGELIB=imagemagick
}

package() {
  cd "$srcdir/vdr-plugin-${_plugname}"
  make DESTDIR="$pkgdir" install

  find "$pkgdir" -name *.png -exec gm convert +profile icm {} {} \;
}
